{
    "name": "Agent Development Environment",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "python.pythonPath": "/usr/local/bin/python",
                "terminal.integrated.defaultProfile.linux": "bash"
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "HashiCorp.terraform"
            ]
        }
    },
    "forwardPorts": [8080],
    "remoteUser": "vscode"
}
